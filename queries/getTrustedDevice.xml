<query id="getTrustedDevice" action="select">
    <tables>
        <table name="googleotp_trusted_devices" />
    </tables>
    <columns>
        <column name="*" />
    </columns>
    <conditions>
        <condition operation="equal" column="member_srl" var="member_srl" notnull="notnull" />
        <condition operation="equal" column="device_token" var="device_token" notnull="notnull" pipe="and" />
        <condition operation="more" column="expires_at" var="current_time" notnull="notnull" pipe="and" />
    </conditions>
</query>
